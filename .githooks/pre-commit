#!/usr/bin/env sh
set -e

if command -v pwsh >/dev/null 2>&1; then
  pwsh -NoProfile -ExecutionPolicy Bypass -File "./scripts/update-version.ps1"
elif command -v powershell >/dev/null 2>&1; then
  powershell -NoProfile -ExecutionPolicy Bypass -File "./scripts/update-version.ps1"
else
  echo "pre-commit: PowerShell not found, skipping REPO_VERSION update."
fi
